@model WebApp.Controllers.SetupDTO
@{
    ViewBag.Title = "Setup Page";
}

<div style="margin-top: 20px" class="well bs-component">
    @using (Html.BeginForm("SetStoreContainer", "Setup", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Please choose your repository</h4>
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label">
                Category
            </label>
            <div class="col-md-4">
                @Html.DropDownList("Repository", ViewBag.Repositories as SelectList, "Select a Repository", htmlAttributes: new { @class = "form-control" })
               
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button name="button" value="send" class="btn btn-primary">Update</button>
               
            </div>
        </div>
        @Html.ValidationSummary()
    }


</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
